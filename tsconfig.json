{
    "compilerOptions": {
        "target": "es5",
        "baseUrl": "src",
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "strictNullChecks": true
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts", "**/*.tsx", "src"]
}
